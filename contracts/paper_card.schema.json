{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/contracts/paper_card.schema.json",
  "title": "PaperCard",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "paper_id",
    "title",
    "one_line_takeaway",
    "research_question",
    "key_claims",
    "evidence_or_method",
    "keywords",
    "limitations",
    "relevance_to_topic"
  ],
  "properties": {
    "paper_id": {
      "type": "string",
      "minLength": 1,
      "description": "Must match Paper.id"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "one_line_takeaway": {
      "type": "string",
      "minLength": 1,
      "description": "One-sentence summary"
    },
    "research_question": {
      "type": "string",
      "minLength": 1,
      "description": "What question/problem does the paper address?"
    },
    "key_claims": {
      "type": "array",
      "minItems": 3,
      "maxItems": 10,
      "items": { "type": "string", "minLength": 1 },
      "description": "3â€“7 bullets recommended"
    },
    "evidence_or_method": {
      "type": "string",
      "minLength": 1,
      "description": "Methods/data/evidence used"
    },
    "keywords": {
      "type": "array",
      "minItems": 5,
      "maxItems": 20,
      "items": { "type": "string", "minLength": 1 }
    },
    "limitations": {
      "type": ["string", "null"],
      "description": "Optional limitations/caveats; null if unknown"
    },
    "relevance_to_topic": {
      "type": "string",
      "minLength": 1,
      "description": "Why this paper matters for the user's topic"
    }
  }
}
