{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/contracts/paper.schema.json",
  "title": "Paper",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "provider",
    "id",
    "title",
    "authors",
    "published_year",
    "abstract",
    "url",
    "pdf_url",
    "categories",
    "score"
  ],
  "properties": {
    "provider": {
      "type": "string",
      "enum": ["arxiv", "openalex", "semantic_scholar", "crossref", "custom"],
      "description": "Which provider this paper came from"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Stable provider ID (e.g., arXiv id)"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "authors": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": { "type": "string", "minLength": 1 }
    },
    "published_year": {
      "type": "integer",
      "minimum": 1900,
      "maximum": 2100
    },
    "abstract": {
      "type": "string",
      "description": "May be empty if provider doesn't supply it"
    },
    "url": {
      "type": "string",
      "minLength": 1,
      "description": "Landing page URL"
    },
    "pdf_url": {
      "type": ["string", "null"],
      "description": "PDF URL if available; null otherwise"
    },
    "categories": {
      "type": "array",
      "minItems": 0,
      "maxItems": 30,
      "items": { "type": "string", "minLength": 1 },
      "description": "Provider categories/tags (e.g., arXiv categories)"
    },
    "score": {
      "type": ["number", "null"],
      "description": "Optional ranking score from provider or reranker"
    }
  }
}
